<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../favicon.ico">

    <title>OAUTH WEB UI</title>

    <!-- Bootstrap core CSS -->
    <link href="bower_components/Bootflat/css/bootstrap.min.css" rel="stylesheet">
    <link href="bower_components/Bootflat/bootflat/css/bootflat.min.css" rel="stylesheet">
    <link href="bower_components/sweetalert/lib/sweet-alert.css" rel="stylesheet">

</head>

<body>

<div class="container">

    <!-- Static navbar -->
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Menu</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Oauth Web UI</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/logout">Sign out</a></li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
        <!--/.container-fluid -->
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <h3>Add client</h3>

                <form action="/client/add" method="POST">
                    <div class="form-group">
                        <label for="name">Client name</label>
                        <input type="text" class="form-control" name="name" id="name" placeholder="Name" required="true">
                    </div>
                    <button type="submit" class="btn btn-default">Generate API keys</button>
                </form>
            </div>
            <div class="col-md-9">
                <h3>Clients</h3>
                <table class="table">
                    <thead>
                    <tr>
                        <td>Client name</td>
                        <td>Client ID</td>
                        <td>Client Secret</td>
                        <td>Created at</td>
                        <td>#</td>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i = 0; i < clients.length; i++) { %>
                    <tr>
                        <td><%= clients[i].name %></td>
                        <td><%= clients[i].id %></td>
                        <td><%= clients[i].secret %></td>
                        <td><%= clients[i].created_at %></td>
                        <td><a href="#" onclick="return confirmDelete('/client/remove/<%= clients[i]._id %>');">Remove</a></td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /container -->

<script src="bower_components/Bootflat/js/jquery-1.10.1.min.js"></script>
<script src="bower_components/Bootflat/js/bootstrap.min.js"></script>
<script src="bower_components/sweetalert/lib/sweet-alert.js"></script>
<script src="js/main.js"></script>

</body>
</html>